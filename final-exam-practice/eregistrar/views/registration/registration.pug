    script(defer, src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js", integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6", crossorigin="anonymous")
  body
    header
      // Start Navbar
      nav(class="navbar navbar-expand-lg navbar-dark bg-primary")
        a(style="padding-right: 2em;", class="navbar-brand", href="#") Prince University : : : eRegistrar
        button(class="navbar-toggler", type="button", data-toggle="collapse", data-target="#navbarColor01", aria-controls="navbarColor01", aria-expanded="false", aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")
        div#navbarColor01(class="collapse navbar-collapse")
          ul(class="navbar-nav mr-auto")
            li(class="nav-item active", style="border-left: white 1px solid; padding-left: 2em; padding-right: 2em;")
              a(class="nav-link", href="/") Home
            li(class="nav-item", style="border-left: white 1px solid; padding-left: 2em; padding-right: 2em;")
              a(class="nav-link", href="/registration/form") Registration
          form(class="form-inline my-2 my-lg-0")
            span(style="color: #ffffff; margin-right: 0em;") Hello, CS Registrar
      // End Navbar
    // Start main-content
    main
      div(style="padding-top: 1em;", class="container")
        // TODO: Add main content here
        h3 Registration 
        hr
        <form id="studentForm" method="post" action="/registration/form">
          <fieldset>
              <legend></legend>
              <div class="row">
                  <div class="col-md-12">
                      <div class="form-group">
                          <label for="studentId">*Student ID No:</label>
                          <input pattern="\d{3}-\d{3}-\d{3}" class="form-control" type="text" name="studentId" id="studentId" placeholder="XXX-XXX-XXXX" required autofocus>
                          <small class="form-text text-muted">Enter the Patient ID Number, in the specified format</small>
                      </div>
                  </div>
              </div>
              <div class="row">
                  <div class="col-md-12">
                      <div class="form-group">
                          <label for="fullName">*Full Name:</label>
                          <input class="form-control" type="text" name="fullName" id="fullName" placeholder="Enter Full Name" required>
                          <small class="form-text text-muted">Enter the Student First Name Printed on the University-issued ID card</small>
                      </div>
                  </div>
              </div>
              <div class="row">
                  <div class="col-md">
                      <div class="form-group">
                          <label for="levelOfStudy">*Level of study:</label>
                          <select required class="form-control" id="levelOfStudy" name="levelOfStudy">
                              <option value="none">Select...</option>
                              <option value="Graduate">Graduate</option>
                              <option value="UnderGraduate">Under Graduate</option>
                          </select>
                          <small class="form-text text-muted">Select the level of study</small>
                      </div>
                  </div>
              </div>
              <div class="row">
                  <div class="col-md-3">
                  </div>
                  <div class="col-md-3">
                  </div>
                  <div style="text-align: right;" class="col-md-6"> 
                    <button style="padding: .5em 4em;" id="btnReset" type="reset" class="btn btn-secondary btn-inline" form="studentForm">Reset</button>
                    <button style="margin-left: 1em; padding: .5em 4em;" id="btnRegisterStudent" type="submit" class="btn btn-primary btn-inline" form="studentForm">Register Student</button>
                  </div>
              </div>
          </fieldset>
        </form>
            <div class="row">
                <div class="col-md-3">
                    <input style="vertical-align: middle;" type="checkbox" name="chkElderlyPatients" id="chkElderlyPatients" value="showElderlyPatients">
                    <label style="vertical-align: baseline;" for="chkElderlyPatients">Graduate</label>
                </div>
                <div class="col-md-3">
                    <input style="vertical-align: middle;" type="checkbox" name="chkShowOutPatients" id="chkShowOutPatients" value="showOutPatients">
                    <label style="vertical-align: baseline;" for="chkShowOutPatients">Under Graduate</label>
                </div>
                <div style="text-align: right;" class="col-md-6">
                   <span> &nbsp; </span>
                </div>
            </div>
            <div style="margin-top: 1em;" id="divPatientsList" style="font-size: 1em">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Student ID</th>
                            <th scope="col">Full Name</th>
                            <th scope="col">level of Study</th>
                        </tr>
                    </thead>
                    tbody
                    each student, index in students
                      tr
                          td #{index + 1}
                          td #{student.studentId}
                          td #{student.fullName}
                          td #{student.levelOfStudy}
                </table>
            </div>
    // End main-content
    // Start footer
    footer
      div
        span(style="margin-left: 1em;") [Put Your Name Here] : : : CS472-WAP
